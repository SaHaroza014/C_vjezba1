#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
    int a1, a2, suma, razlika, produkt, djeljenik  ;

    printf("Unesite cijele brojeve: \n");
    scanf("%d %d", &a1, &a2);

    printf("Cijeli brojevi su %d i %d\n", a1, a2);

    suma = a1 + a2;

    // kako prikazati negativni broj nastao oduzimanjem???
    //provjeriti ovu sintaksu
    if (a1 > a2) {
        razlika = a1 - a2;
    } else if (a2 > a1) { razlika = a2 - a1; };


    produkt = a1 * a2; 

    //provjeriti
    if (a1 > a2) {
        djeljenik = a1 / a2;
    }
    else if (a2 > a1) { djeljenik = a2 / a1; };


    printf("Suma cijelih brojeva a1 i a2 je %d\n", suma);
    printf("Razlika cijelih brojeva a1 i a2 je %d\n", razlika);
    printf("Produkt cijelih brojeva a1 i a2 je %d\n", produkt);
    printf("Djeljenik cijelih brojeva a1 i a2 je %d\n", djeljenik);

    return 0;
}

